<!DOCTYPE html>
<html>
<head>
  <title>UselessComix</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="nav-top-container">
    <ul class="nav-flex">
      <li class="nav-cell"><h1><%= link_to 'Useless Comix', root_path %></h1></li>
      <% if current_user %>
        <li class="nav-cell">Welcome <%= current_user.name %></li>
      <% end %>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell" class="empty-cell"></li>
      <li class="nav-cell"><%= link_to 'About', about_path %></li>
      <li class="nav-cell"><%= link_to 'Archives', comics_path %></li>
      <% if !current_user %>
        <li class="nav-cell"><%= link_to 'Login', login_path %></li>
        <li class="nav-cell"><%= link_to 'Signup', new_user_path  %></li>
      <% else %>
        <li class="nav-cell"><%= link_to 'My Profile', user_path(current_user)  %></li>
        <li class="nav-cell"><%= link_to 'Logout', logout_path, method: :delete %></li>
      <% end %>
    </ul>
  </div>

  <div class="container">
    <% flash.each do |type, message| %>
      <p class="flash <%= type.to_s %>"><%= message %></p>
    <% end %>
  </div>

  <div class="container">
    <%= yield %>
  </div>
</body>
</html>
