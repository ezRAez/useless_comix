<h1><%= @user.name %></h1>

<%= button_to "Edit Profile", edit_user_path(@user), method: :get %>

<% if current_user %>
  <% if current_user.admin? %>
    <%= button_to "Add Comic", new_user_comic_path(@user), method: :get %>
  <% end %>
<% end %>

<h3>Favorite Comics</h3>
<ul>
  <% @user.favorite_comics.each do |comic| %>
    <li>
      <%= image_tag(comic.uri, height: '32', width: '32') %>
      <strong>
        <%= link_to "#{comic.name}", comic_path(comic) %>
      </strong> - <%= comic.created_at %>
    </li>
  <% end %>
</ul>
